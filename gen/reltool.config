%% -*- mode: erlang -*-

{sys, [ {lib_dirs, ["../lib"]}
      , { rel, "eduspider", "1"
        , [ kernel
          , stdlib
          , sasl
          , crypto
          , webmachine
          , erlydtl
          , wiki_creole
          , ibrowse
          , riakc
          , riakhttpc
          , eduspider_web
          , ssl
          , inets
          ]
        }
      , { rel, "start_clean", ""
        , [ kernel, stdlib ]
        }
      , {boot_rel, "eduspider"}
      , {profile, embedded}
      , {excl_sys_filters, [ "^bin/.*"
                           , "^erts.*/bin/(dialyzer|typer)"
                           ]
        }
      , {excl_archive_filters, [".*"]}
      , {app, eduspider_web, [{incl_cond, include}]}
      , {app, wiki_creole, [{incl_cond, include}]}
      , {app, webmachine, [{incl_cond, include}]}
      , {app, erlydtl, [{incl_cond, include}]}
      , {app, sasl, [{incl_cond, include}]}
      , {app, ssl, [{incl_cond, include}]}
      , {app, inets, [{incl_cond, include}]}
      ]}.

{target_dir, "../rel"}.

{ overlay
, [ {mkdir, "log/sasl"}
  , {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"}
  , {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"}
  , {copy, "files/eduspider", "bin/eduspider"}
  , {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"}
  , {copy, "files/eduspider.cmd", "bin/eduspider.cmd"}
  , {copy, "files/start_erl.cmd", "bin/start_erl.cmd"}
  , {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
  ]
}.

