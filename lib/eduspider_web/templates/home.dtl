<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <title>EduSpider</title>

    <link rel="stylesheet" type="text/css" href="/static/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/bootstrap-responsive.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/prettify.css" />
    <link rel="stylesheet" type="text/css" href="/static/css/eduspider.css" />

    <script type="text/javascript" src="/static/js/jquery.min.js"></script>
    <script type="text/javascript" src="/static/js/underscore.js"></script>
    <script type="text/javascript" src="/static/js/backbone.js"></script>
    <script type="text/javascript" src="/static/js/prettify.js"></script>
    <script type="text/javascript" src="/static/js/handlebars.js"></script>
    <script type="text/javascript" src="/static/js/bootstrap.js"></script>
    <script type="text/javascript" src="/static/js/eduspider.js"></script>

    <script type="text/javascript">
      $(document).ready(function() {
          var spider_router = new window.EduSpiderRouter();
          {% if user_id %}
             spider_router.start("{{ user_id }}");
          {% else %}
             spider_router.start();
          {% endif %}
      });
    </script>

    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>
  </head>

  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <!-- show the app name -->
          <a class="brand" href="#">EduSpider</a>
          {% if user_id %}
          <!-- if the user has logged in, create the logout button for this user -->
          <ul class="nav pull-right">
            <ul class="nav pull-right">
              <li class="dropdown"><a href="#" data-toggle="dropdown" class="menu"><i class="icon-user icon-white"></i> {{ user_id }}
              <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a id="logout_anchor" class="logout">Logout</a></li>
              </ul>
              </li>
            </ul>
          </ul>
          {% endif %}
        </div>
      </div>
    </div>

    <div id="content" class="container">
    </div>
  </body>
</html>
